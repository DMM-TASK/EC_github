<div class="container">
  <h3>ジャンル一覧・追加</h3>

  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
    <table>
      <tbody>
        <tr>
          <td>ジャンル名</td>
          <td><%= f.text_field :name, placeholder: "ジャンル名" %></td>
          <td><%= f.submit "新規登録" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

