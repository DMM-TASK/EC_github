<div class="container">
  <h3>ジャンル編集</h3>

  <div class="row mt-4 mb-2">
    <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
      <table>
        <tbody>
          <tr>
            <td>ジャンル名</td>
            <td></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "変更を保存" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
