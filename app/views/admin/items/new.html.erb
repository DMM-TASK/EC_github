<h1>商品新規投稿</h1>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item do |f| %>
   <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "選択してください" %>
  <h4>税抜き価格</h4>
  <%= f.text_field :price %>
  <h4>販売ステータス</h4>
<%= f.label :is_active_true, '有効' %>
<%= f.radio_button :is_active, true, id: :is_active_true %>

<%= f.label :is_active_false, '無効' %>
<%= f.radio_button :is_active, false, id: :is_active_false %>


  <%= f.submit '新規登録' %>
<% end %>