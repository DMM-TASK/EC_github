<div class="container">
  <div class="row">
    <h3>会員一覧</h3>
      <table>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
          <tbody>
            <td><%= customer.id %></td>

            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>

            <td><%= customer.email %></td>

            <td>
              <%= if cutomer.is_customer_status == fales %>
              有効
              <% else %>
              無効
              <% end %>
            </td>
          </tbody>
        <% end %>
      </table>
  </div>
</div>
