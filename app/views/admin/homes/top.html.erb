<h2>注文一覧</h2>

<table>
  <thead>
  <tr>
    <th>購入日時</th>
    <th>注文者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= "#{order.user.last_name} #{order.user.first_name}" %></td>
    <td><%= order.order_details.sum(:amount) %></td>
    <td><%= order.status %></td>
  </tr>
  <% end %>
  </tbody>
</table>